---
import BaseLayout from '../layouts/BaseLayout.astro';
import { buildLocalBusinessSchema, SITE_URL } from '../utils/structuredData';

const pageTitle = 'Get in Touch | LEM Building Surveying';
const description =
  'Speak with LEM Building Surveying for local RICS surveys and damp reports in Deeside, Chester and North Wales. Call 07378 732 037 or request a call back online.';
const canonicalPath = '/contact';
const pageUrl = `${SITE_URL}${canonicalPath}`;

const seo = {
  title: pageTitle,
  description,
  canonicalPath,
  openGraph: {
    title: pageTitle,
    description,
    url: pageUrl,
    type: 'website',
  },
  twitter: {
    title: pageTitle,
    description,
  },
  structuredData: [
    buildLocalBusinessSchema({
      description,
      url: pageUrl,
      contactPoint: [
        {
          '@type': 'ContactPoint',
          contactType: 'customer support',
          telephone: '+44 7378 732 037',
          areaServed: ['GB'],
          availableLanguage: ['English'],
          url: pageUrl,
        },
      ],
    }),
  ],
};
---

<BaseLayout seo={seo}>
  <section class="hero hero-plain">
    <div class="hero-container">
      <h1>Get in Touch</h1>
      <p class="hero-subtitle">Fast answers from a local, independent surveyor</p>
    </div>
  </section>

  <main class="contact-card" aria-labelledby="contact-options">
    <div class="box-container">
      <h2 id="contact-options">How to reach us</h2>
      <p>
        <strong>Phone:</strong>
        <a href="tel:07378732037">07378&nbsp;732&nbsp;037</a>
      </p>
      <p>
        <strong>Request a callback:</strong>
        <a class="inline-link" href="/enquiry">Complete our quick enquiry form</a>
        and we will respond within the hour whenever possible.
      </p>
      <p>
        We support homeowners, landlords and agents across Flintshire, Chester and the
        wider North West. Share your property details and preferred contact method so we
        can prepare the right advice before we call.
      </p>
      <p class="fine-print">Office hours: Mon–Fri 8:30 am – 5:30 pm</p>
    </div>
  </main>

  <section class="contact-cta" aria-labelledby="request-quote">
    <div class="box-container">
      <h2 id="request-quote">Ready to arrange a survey?</h2>
      <p>
        Click below to send your property details—we’ll respond within the hour and
        confirm the next available inspection dates.
      </p>
      <a href="/enquiry" class="cta-button">Request a Quote</a>
    </div>
  </section>

  <div class="sticky-cta">
    <a href="/enquiry" class="cta-button">Get a Quote</a>
  </div>
</BaseLayout>
