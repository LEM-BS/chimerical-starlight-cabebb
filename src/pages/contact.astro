        <meta name="twitter:title" content="Get in Touch | LEM Building Surveying">
        <meta name="twitter:description" content="Call 07378 732 037 or email for independent building survey advice across Deeside, Chester &amp; the North West—expect a response within the hour.">
        <meta name="twitter:url" content="https://www.lembuildingsurveying.co.uk/contact">
        <meta name="twitter:image" content="https://www.lembuildingsurveying.co.uk/logo-sticker.png">




        <!-- Google tag (gtag.js) -->
  </Fragment>

  <!-- Shared header --><!-- HERO --><section class="hero">
        <div class="hero-container">
          <h1>Get in Touch</h1>
          <p class="hero-subtitle">
            Fast answers from a local, independent surveyor
          </p>
        </div>
      </section><!-- CONTACT CARD --><main id="main" class="contact-card">
        <div class="box-container">
          <p>
            <strong>Phone:</strong>
            <a href="tel:07378732037">07378&nbsp;732&nbsp;037</a>
          </p>
          <p>
            <strong>Email:</strong>
            <a href="mailto:enquiries@lembuildingsurveying.co.uk">
              enquiries@lembuildingsurveying.co.uk</a>
          </p>
          <p>
            If you need a tailored quote, please use our
            <a href="/enquiry" class="inline-link">quick enquiry form</a> for
            the fastest response.
          </p>
          <p class="fine-print">Office hours: Mon–Fri 8:30 am – 5:30 pm</p>
        </div>
      </main><!-- CTA --><section class="contact-cta">
        <div class="box-container">
          <h2>Ready to arrange a survey?</h2>
          <p>
            Click below to send your property details—we’ll respond within the
            hour.
          </p>
          <a href="/enquiry" class="cta-button">Request a Quote</a>
        </div>
      </section><!-- Sticky CTA --><div class="sticky-cta">
        <a href="/enquiry" class="cta-button">Get a Quote</a>
      </div><!-- Shared footer --><script is:inline>
        document.addEventListener("DOMContentLoaded", () => {
          /* Track mailto clicks (optional) */
          document.querySelectorAll('a[href^="mailto:"]').forEach((link) => {
            link.addEventListener("click", () =>
              gtag("event", "mailto_click", { email: link.href }),
            );
          });
        });
      </script>
</BaseLayout>
