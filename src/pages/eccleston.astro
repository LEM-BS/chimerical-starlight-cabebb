const internalLinks = {
  heading: `Popular services for ${townName} clients`,
  description: 'Explore our core surveying and diagnostic services for Cheshire buyers and owners.',
  links: [
    {
      label: 'RICS Level 2 Home Survey',
      href: '/level-2',
      description: `See how our Level 2 reports support purchases in ${townName} and nearby villages.`,
    },
    {
      label: 'RICS Level 3 Building Survey',
      href: '/level-3',
      description: 'Understand the depth of analysis available for complex or historic properties.',
    },
    {
      label: 'Damp & Timber Surveys',
      href: '/damp-timber-surveys',
      description: 'Independent damp diagnosis for sandstone cottages, barns and cellars.',
    },
    {
