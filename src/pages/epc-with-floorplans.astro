---
import BaseLayout from '../layouts/BaseLayout.astro';
import { areaSelectorOptions } from '../data/areas';
import { createServiceSeo } from '../utils/structuredData';

const epcFaqs = [
  {
    question: 'How quickly can you deliver the EPC and floorplan?',
    answer:
      'Most appointments are completed within a week of enquiry and reports are issued within 48 hours. Let us know if you need a faster turnaround and we will prioritise your slot.',
  },
  {
    question: 'Are the EPC assessments fully accredited?',
    answer:
      'Yes. All EPCs are completed by an Elmhurst-accredited Domestic Energy Assessor and lodged to the central register with the appropriate certification.',
  },
  {
    question: 'Can I book the EPC and floorplan together?',
    answer:
      'Absolutely. Combining the visit keeps disruption to a minimum and often reduces the overall fee compared to arranging the services separately.',
  },
  {
    question: 'Do you provide digital copies of the floorplans?',
    answer:
      'You receive clear PDF floorplans sized for marketing plus high-resolution files that agents can add straight to sales or lettings listings.',
  },
];

const description =
  'Elmhurst-accredited EPCs with professional 2D floorplans for sales, lettings and compliance across Flintshire, Chester, Wrexham and Cheshire with fast turnaround.';

const { seo: baseSeo, pageUrl } = createServiceSeo({
  title: 'EPCs with Floorplans | LEM Building Surveying',
  description,
  canonicalPath: '/epc-with-floorplans',
  serviceName: 'EPCs with Floorplans',
  serviceType: 'Domestic Energy Performance Certificate',
  faqs: epcFaqs,
  review: {
    author: 'Lettings agent in Chester',
    body: 'Professional EPC and floorplan package with quick booking and clear outputs for our marketing.',
    ratingValue: 5,
    datePublished: '2024-06-05',
  },
});

const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: 'Home',
      item: 'https://lembuildingsurveying.co.uk/',
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: 'Services',
      item: 'https://lembuildingsurveying.co.uk/services',
    },
    {
      '@type': 'ListItem',
      position: 3,
      name: 'EPCs with Floorplans',
      item: pageUrl,
    },
  ],
};

const seo = {
  ...baseSeo,
  structuredData: [...baseSeo.structuredData, breadcrumbSchema],
};
---

<BaseLayout productKey="epc" seo={seo}>

  <!-- Shared Header --><!-- HERO SECTION --><section class="hero">
        <div class="hero-container">
  <h1>EPCs with Floorplans</h1>
  <p>Accredited energy assessments and floorplans tailored for compliance and marketing—ideal for sales, lettings or retrofits.</p>
  <a class="cta-button" href="/enquiry">Get a Quote</a>
  </div>
  </section><!-- MAIN CONTENT SECTION --><section class="service-detail">
  <div class="box-container">
  <h2>Energy Performance Certificates &amp; Floorplans</h2>
  <p>We provide fast, professional EPCs and floorplan packages for landlords, sellers, estate agents, and homeowners across the region. All assessments are Elmhurst-accredited and lodged to the central register.</p>
  <div class="survey-grid">
  <div class="survey-card">
  <h3>Included Services</h3>
  <ul>
  <li><strong>EPCs:</strong> Domestic Energy Assessments performed to legal standards, with official lodgement.</li>
  <li><strong>2D Floorplans:</strong> Clear, scaled property layouts including room labels and sizes.</li>
  <li><strong>Combined Visit Option:</strong> Book both services together to save time and money.</li>
  </ul>
  </div>
  <div class="survey-card">
  <h3>Ideal For:</h3>
  <ul>
  <li>Sellers and landlords requiring EPC compliance</li>
  <li>Estate agents preparing marketing materials</li>
  <li>Homeowners planning improvements or upgrades</li>
  </ul>
  </div>
  <div class="survey-card">
  <h3>Pricing Guide</h3>
  <ul>
  <li><strong>EPC Only:</strong> £70–£120</li>
  <li><strong>2D Floorplan Only:</strong> £75–£150</li>
  <li><strong>Combined EPC &amp; Floorplan:</strong> £120–£200</li>
  <li><strong>Urgent / Same-Day Option:</strong> +£30–£50 (subject to availability)</li>
  <li>Custom quotes available for large or complex properties</li>
  </ul>
  </div>
  <div class="survey-card">
  <h3>Why Choose LEM Building Surveying?</h3>
  <ul>
  <li><strong>Elmhurst Accredited:</strong> Fully qualified and registered assessor</li>
  <li><strong>Fast, Reliable Service:</strong> Flexible appointments with next-day turnaround available</li>
  <li><strong>Expert Local Knowledge:</strong> Serving Flintshire, Chester, Wrexham, Cheshire &amp; beyond</li>
  </ul>
  </div>
  <!-- SERVICE AREA DROPDOWN -->
  <section class="home-areas improved-areas">
  <div class="box-container">
  <!-- 1. Header column -->
  <div class="areas-header">
  <h2>Areas We Cover</h2>
  <p class="lead">Based in Connah’s Quay, we serve property owners across Flintshire, Chester, and surrounding areas</p>
  </div>
  <!-- 2. Content column -->
  <div class="areas-content">
  <!-- a) Styled select card -->
  <div class="dropdown-card">
  <label class="dropdown-label" for="areaDropdown">Jump to an area:</label>
  <div class="custom-select">
<select id="areaDropdown" onchange="handleAreaSelect(this)">
<option value="">Select an area…</option>
  {areaSelectorOptions.map((area) => (
    <option value={area.permalink}>{area.name}</option>
  ))}
</select>
  <span class="chevron">⌄</span>
  </div>
  </div>
  <!-- 3. Footer note spans both columns -->
  <p class="note"><strong>…and nearby towns across the region.</strong></p>
  </div>
  </div></section>
  <script is:inline>
    /** @param {HTMLSelectElement} select */
    function handleAreaSelect(select) {
      if (select.value) window.location.href = select.value;
    }
  </script>
  <!-- FINAL CTA -->
  <section class="home-get-started">
  <div class="box-container">
  <h2>Get a Quote or Ask a Question</h2>
  <p>We’re happy to help whether you’re ready to book or just comparing options.</p>
  <div class="center-cta">
  <a class="cta-button" href="/enquiry">Get My Quote</a>
  </div>
  </div>
  </section>
  <!-- STICKY CTA -->
  <div class="sticky-cta">
  <a class="cta-button" href="/enquiry">Get a Quote</a>
  </div>
  <!-- Footer -->


  </div></div></section>
  <div data-include="/partials/reviews-epc.html"></div>
  <Fragment slot="body-end">
    <script src="/assets/js/includes.js" defer is:inline></script>
    <script src="/assets/js/review-schema.js" defer is:inline></script>
  </Fragment>
</BaseLayout>
