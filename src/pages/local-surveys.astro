---
import BaseLayout from '../layouts/BaseLayout.astro';
import { serviceAreas } from '../data/serviceAreas';

const areas = [...serviceAreas].sort((a, b) => a.name.localeCompare(b.name));
---

<BaseLayout>
  <Fragment slot="head">
    <title>Local Home Surveys Across Flintshire &amp; Chester | LEM</title>
    <meta
      name="description"
      content="Find your town or village to arrange a RICS home survey, damp report or EPC with LEM Building Surveying. Serving Flintshire, Chester, Cheshire and the wider North West."
    />
    <link rel="canonical" href="https://www.lembuildingsurveying.co.uk/local-surveys" />
    <meta
      property="og:title"
      content="Local Home Surveys Across Flintshire &amp; Chester | LEM"
    />
    <meta
      property="og:description"
      content="Explore the towns and villages covered by LEM Building Surveying Ltd. Book RICS surveys, damp and timber inspections or EPCs across Flintshire, Chester and Cheshire."
    />
    <meta
      property="og:url"
      content="https://www.lembuildingsurveying.co.uk/local-surveys"
    />
    <meta
      property="og:image"
      content="https://www.lembuildingsurveying.co.uk/logo-sticker.png"
    />
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="Local Home Surveys Across Flintshire &amp; Chester | LEM"
    />
    <meta
      name="twitter:description"
      content="Independent surveyor supporting homeowners across Flintshire, Chester, Cheshire and the North West."
    />
    <meta
      name="twitter:url"
      content="https://www.lembuildingsurveying.co.uk/local-surveys"
    />
    <meta
      name="twitter:image"
      content="https://www.lembuildingsurveying.co.uk/logo-sticker.png"
    />
    <meta name="robots" content="index, follow" />
    <script type="application/ld+json" is:inline>
      {JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'LocalBusiness',
        name: 'LEM Building Surveying Ltd',
        url: 'https://www.lembuildingsurveying.co.uk/local-surveys',
        telephone: '+44 7378 732 037',
        email: 'enquiries@lembuildingsurveying.co.uk',
        image: 'https://www.lembuildingsurveying.co.uk/logo-sticker.png',
        address: {
          '@type': 'PostalAddress',
          streetAddress: "Connah's Quay",
          addressLocality: 'Deeside',
          addressRegion: 'Flintshire',
          postalCode: 'CH5',
          addressCountry: 'GB'
        },
        areaServed: areas.map((area) => area.name)
      })}
    </script>
    <script type="application/ld+json" is:inline>
      {JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'BreadcrumbList',
        itemListElement: [
          {
            '@type': 'ListItem',
            position: 1,
            name: 'Home',
            item: 'https://www.lembuildingsurveying.co.uk/'
          },
          {
            '@type': 'ListItem',
            position: 2,
            name: 'Areas We Cover',
            item: 'https://www.lembuildingsurveying.co.uk/local-surveys'
          }
        ]
      })}
    </script>
  </Fragment>

  <main class="local-surveys">
    <section class="hero hero-plain">
      <div class="hero-container">
        <h1>Areas We Cover</h1>
        <p>
          Find your town or village below and book a survey directly with Liam, your
          independent AssocRICS surveyor. Every location links to a dedicated page with
          more detail on local experience, service options and booking information.
        </p>
      </div>
    </section>

    <section class="box-container">
      <h2 id="locations">Towns &amp; Villages Served</h2>
      <p>
        We regularly work across Flintshire, Chester, Cheshire and into the wider North
        West of England. Select a location to learn about recent projects nearby and the
        survey types most commonly requested there.
      </p>
      <ul class="area-grid">
        {areas.map((area) => (
          <li class="area-card">
            <a href={`/${area.slug}.html`}>
              <span class="area-name">{area.name}</span>
              <span class="area-description">{area.description}</span>
              <span class="area-link">Explore surveys in {area.name}</span>
            </a>
          </li>
        ))}
      </ul>
    </section>

    <section class="box-container">
      <h2>Need Support Outside These Locations?</h2>
      <p>
        Canâ€™t see your area listed? We often travel beyond the towns above for specialist
        reports. Get in touch with the property postcode and we will confirm availability
        or recommend a trusted surveyor closer to you.
      </p>
      <div class="cta-section">
        <a class="cta-button" href="/enquiry.html">Request a Quote</a>
        <a class="secondary-button" href="/contact.html">Speak to Liam</a>
      </div>
    </section>
  </main>
</BaseLayout>
