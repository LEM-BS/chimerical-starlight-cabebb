---
import BaseLayout from '../layouts/BaseLayout.astro';
import { createServiceSeo } from '../utils/structuredData';

const comparisonFaqs = [
  {
    question: 'Which survey level suits a 1930s semi-detached house?',
    answer:
      'Most buyers choose a Level 2 HomeBuyer Survey for standard homes of that age unless the property has been heavily altered, in which case a Level 3 survey may be recommended.',
  },
  {
    question: 'Can I upgrade the survey level after booking?',
    answer:
      'Yes. If we identify that a deeper inspection is appropriate we can switch levels before the visit and you simply pay the difference in fee.',
  },
  {
    question: 'How quickly will I receive the survey report?',
    answer:
      'Reports are typically delivered within five working days of the inspection, with faster updates available for urgent chains when requested.',
  },
];

const description =
  'Compare Level 1, Level 2 and Level 3 RICS surveys so you can choose the right inspection for your property purchase in Deeside, Chester and Flintshire.';

const { seo: baseSeo, pageUrl } = createServiceSeo({
  title: 'Compare RICS Survey Levels | LEM Building Surveying',
  description,
  canonicalPath: '/comparison',
  serviceName: 'RICS Survey Level Comparison',
  serviceType: 'RICS Survey Guidance',
  faqs: comparisonFaqs,
  review: {
    author: 'Buyer in Chester',
    body: 'The comparison table made it easy to see the difference between survey levels before booking.',
    ratingValue: 5,
    datePublished: '2024-07-04',
  },
});

const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: 'Home',
      item: 'https://lembuildingsurveying.co.uk/',
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: 'Compare Surveys',
      item: pageUrl,
    },
  ],
};

const seo = {
  ...baseSeo,
  structuredData: [...baseSeo.structuredData, breadcrumbSchema],
};
---

<BaseLayout seo={seo}>

  <!-- Shared Header --><!-- COMPARISON INTRO SECTION --><section class="comparison-intro">
  <div class="container">
  <h1>Compare RICS Survey Levels</h1>
  <p>
          Unsure which home survey is right for your property? Use the table below to compare the three RICS-approved survey levels—so you can choose the most appropriate option with confidence.
        </p>
  <p>
          All surveys follow the <strong>RICS Home Survey Standard</strong> and are carried out by an independent local expert.
        </p>
  </div>
  </section><!-- COMPARISON TABLE SECTION --><section class="comparison-section">
  <div class="container">
  <div class="table-scroll">
  <table class="comparison-table">
  <thead>
  <tr>
  <th>Survey Level</th>
  <th>What’s Included</th>
  <th>Best For</th>
  <th>Starting Price</th>
  <th>More Info</th>
  </tr>
  </thead>
  <tbody>
  <tr>
  <td><strong>Level 1</strong><br>Condition Report</td>
  <td>
                  Visual checks of accessible areas. Identifies urgent issues. Traffic-light ratings only. No repair advice.
                </td>
  <td>
                  Newer or well-maintained homes under 10 years old with no obvious problems.
                </td>
  <td>From £350</td>
  <td><a href="/level-1">Find out more →</a></td>
  </tr>
  <tr>
  <td><strong>Level 2</strong><br>HomeBuyer Report</td>
  <td>
                  All Level 1 checks plus advice on repairs, ongoing maintenance.
                </td>
  <td>
                  Conventional properties in reasonable condition built from standard materials.
                </td>
  <td>From £475</td>
  <td><a href="/level-2">Find out more →</a></td>
  </tr>
  <tr>
  <td><strong>Level 3</strong><br>Building Survey</td>
  <td>
                  Full structural analysis of materials, defects, causes, and repair options. Optional costings and additional tests.
                </td>
  <td>
                  Older, extended, listed or non-standard properties—or homes needing renovation.
                </td>
  <td>From £650</td>
  <td><a href="/level-3">Find out more →</a></td>
  </tr>
  </tbody>
  </table>
  </div>
  </div>
  </section><!-- CTA SECTION --><section class="cta-section">
  <div class="container">
  <h2>Need Help Choosing?</h2>
  <p>
          Still not sure which survey suits your property? Liam is happy to help. Get in touch for honest, expert advice with no pressure.
        </p>
  <a class="cta-button" href="/contact">Speak to Liam</a>
  </div>
  </section><!-- FOOTER --><!-- Load Header via JavaScript -->
</BaseLayout>
