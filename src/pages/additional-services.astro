---
import BaseLayout from '../layouts/BaseLayout.astro';
import { createServiceSeo } from '../utils/structuredData';

const additionalServicesFaqs = [
  {
    question: 'Do you offer tailored inspection bundles?',
    answer:
      'Yes. We regularly combine snagging, landlord compliance and commercial condition reports so you only pay for the visits you need.',
  },
  {
    question: 'Can you work alongside our existing property team?',
    answer:
      'We collaborate with managing agents, facilities teams and contractors, providing clear reporting that fits seamlessly with their workflows.',
  },
  {
    question: 'Are commercial sites within your coverage area?',
    answer:
      'Absolutely. We survey retail, office and light industrial premises across Flintshire, Cheshire and the wider North West.',
  },
];

const description =
  'Specialist snagging, landlord, commercial and fire safety surveys for property owners across Deeside, Chester and Flintshire delivered by independent experts.';

const { seo: baseSeo, pageUrl } = createServiceSeo({
  title: 'Specialist & Additional Surveying | LEM Building Surveying',
  description,
  canonicalPath: '/additional-services',
  serviceName: 'Specialist & Additional Surveying Services',
  serviceType: 'Specialist Building Surveying',
  faqs: additionalServicesFaqs,
  review: {
    author: 'Property manager in Wrexham',
    body: 'Detailed landlord inspections and reports that kept our compliance schedule on track.',
    ratingValue: 5,
    datePublished: '2024-06-12',
  },
});

const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: 'Home',
      item: 'https://lembuildingsurveying.co.uk/',
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: 'Services',
      item: 'https://lembuildingsurveying.co.uk/services',
    },
    {
      '@type': 'ListItem',
      position: 3,
      name: 'Additional Services',
      item: pageUrl,
    },
  ],
};

const seo = {
  ...baseSeo,
  structuredData: [...baseSeo.structuredData, breadcrumbSchema],
};
---

<BaseLayout seo={seo}>

  <!-- Shared Header --><!-- HERO SECTION --><section class="hero">
  <div class="hero-container">
  <h1>Specialist &amp; Additional Surveying Services</h1>
  <p>Professional, independent surveys tailored for landlords, developers, property investors and commercial clients across Deeside, Chester, Flintshire and the wider North West.</p>
  </div>
  </section><!-- SERVICES CONTENT --><section class="services-box">
  <div class="container">
  <h2>Our Additional Services</h2>
  <p>Beyond our core residential surveys, we offer a range of specialist inspection and reporting services for diverse property needs—from snagging inspections to commercial assessments and landlord reporting.</p>
  <h3>New Build Snagging Surveys</h3>
  <p>Identify defects and incomplete finishes before your builder’s warranty expires. Ideal for buyers of new homes seeking peace of mind and leverage for rectifications.</p>
  <h3>Commercial Surveys</h3>
  <p>Detailed reports for shops, offices, industrial units and commercial properties. Includes condition assessments, pre-acquisition surveys and planned maintenance support.</p>
  <h3>Landlord Inspections</h3>
  <p>Independent property checks for landlords to ensure tenant safety, condition compliance and documentation for insurance or lettings purposes.</p>
  <h3>Buy-to-Let Surveys</h3>
  <p>Concise surveys tailored for investors and landlords evaluating property condition, potential risks and rental suitability.</p>
  <h3>Schedules of Condition</h3>
  <p>Essential for leases and construction works—capture a property's pre-occupation state to avoid costly disputes at lease end or contract completion.</p>
  <h3>Fire Door Surveys</h3>
  <p>Ensure doors are compliant, safe and properly installed. Visual inspections and reporting aligned with current fire safety regulations.</p>
  <h3>Fire Compartmentation</h3>
  <p>Visual inspection and advice to identify breaches in fire resistance across floors, walls and service penetrations—essential for property managers and commercial clients.</p>
  <p>Need something else? Get in touch—we may be able to help with other bespoke surveying requests.</p>
  <div class="centered-cta">
  <a class="cta-button" href="/contact">Make an Enquiry</a>
  </div>
  </div>
  </section><!-- FOOTER --><!-- Load Header/Footer via JS -->
</BaseLayout>
