---
import BaseLayout from '../layouts/BaseLayout.astro';
import { serviceAreaGroups } from '../data/service-areas';

const dropdownOptions = serviceAreaGroups
  .flatMap((group) => group.areas)
  .sort((a, b) => a.name.localeCompare(b.name));
---

<BaseLayout>
  <Fragment slot="head">
    <title>Damp &amp; Timber Surveys in Deeside &amp; Chester | LEM</title>
    <meta content="Book independent damp and timber surveys in Deeside, Chester and Flintshire with LEM. We diagnose woodworm, rot and moisture issues with thorough inspections." name="description">
    <meta content="Damp and Timber Survey, Woodworm Inspection, Dry Rot, Wet Rot, Rising Damp, Timber Decay, Structural Damp Report, Property Surveyor Deeside Flintshire Chester Cheshire North West" name="keywords">
    <link href="https://www.lembuildingsurveying.co.uk/damp-timber-surveys" rel="canonical">
    <meta content="Damp &amp; Timber Surveys in Deeside &amp; Chester | LEM" property="og:title">
    <meta content="Book independent damp and timber surveys in Deeside, Chester and Flintshire with LEM. We diagnose woodworm, rot and moisture issues with thorough inspections." property="og:description">
    <meta content="https://www.lembuildingsurveying.co.uk/damp-timber-surveys" property="og:url">
    <meta content="https://www.lembuildingsurveying.co.uk/logo-sticker.png" property="og:image">
    <meta content="summary_large_image" name="twitter:card">
    <meta content="Damp &amp; Timber Surveys in Deeside &amp; Chester | LEM" name="twitter:title">
    <meta content="Book independent damp and timber surveys in Deeside, Chester and Flintshire with LEM. We diagnose woodworm, rot and moisture issues with thorough inspections." name="twitter:description">
    <meta content="https://www.lembuildingsurveying.co.uk/damp-timber-surveys" name="twitter:url">
    <meta content="https://www.lembuildingsurveying.co.uk/logo-sticker.png" name="twitter:image">


      <script type="application/ld+json" is:inline>
        {
          "@context": "https://schema.org",
          "@type": "BreadcrumbList",
          "itemListElement": [
            {
              "@type": "ListItem",
              "position": 1,
              "name": "Home",
              "item": "https://www.lembuildingsurveying.co.uk/"
            },
            {
              "@type": "ListItem",
              "position": 2,
              "name": "Services",
              "item": "https://www.lembuildingsurveying.co.uk/services"
            },
            {
              "@type": "ListItem",
              "position": 3,
              "name": "Damp & Timber Surveys",
              "item": "https://www.lembuildingsurveying.co.uk/damp-timber-surveys"
            }
          ]
        }
      </script>
  </Fragment>

  <!-- Shared Header --><!-- HERO SECTION --><section class="hero">
  <div class="hero-container">
  <h1>Damp &amp; Timber Surveys</h1>
  <p>Protect your investment with expert assessments of damp, timber decay, and related issues.</p>
  <a class="cta-button" href="/enquiry.html">Request a Survey</a>
  </div>
  </section><!-- MAIN CONTENT SECTION --><section class="service-detail">
  <div class="box-container">
  <h2>Common Issues Identified</h2>
  <ul>
  <li><strong>Rising Damp:</strong> Moisture rising from the ground through walls, potentially damaging finishes and structure.</li>
  <li><strong>Penetrating Damp:</strong> Water ingress through roofs, walls, windows, or defective flashings.</li>
  <li><strong>Condensation &amp; Mould:</strong> Unhealthy mould growth and condensation due to poor ventilation or insulation.</li>
  <li><strong>Woodworm Infestation:</strong> Insect activity in timbers that can weaken structural elements.</li>
  <li><strong>Wet &amp; Dry Rot:</strong> Fungal decay affecting wood, causing serious structural weakness if left untreated.</li>
  </ul>
  <h2>Why Choose LEM for Your Survey?</h2>
  <ul>
  <li><strong>Independent &amp; Unbiased:</strong> No commercial ties—just honest, expert advice from a RICS-certified surveyor.</li>
  <li><strong>Clear, Actionable Reports:</strong> Easy-to-understand findings with photographs and practical recommendations.</li>
  <li><strong>Local Expertise:</strong> Specialist knowledge of local construction and common regional issues.</li>
  </ul>
  <!-- SERVICE AREA DROPDOWN -->
  <section class="home-areas improved-areas">
  <div class="box-container">
  <!-- 1. Header column -->
  <div class="areas-header">
  <h2>Damp &amp; Timber Expertise Near You</h2>
  <p class="lead">Independent diagnostics for rot, woodworm and moisture issues across our local patch.</p>
  </div>
  <!-- 2. Content column -->
  <div class="areas-content">
  <!-- a) Styled select card -->
  <div class="dropdown-card">
  <label class="dropdown-label" for="dampTimberAreaDropdown">Jump to an area:</label>
  <div class="custom-select">
  <select id="dampTimberAreaDropdown" onchange="handleAreaSelect(this)">
  <option value="">Select an area…</option>
  {dropdownOptions.map((area) => (
    <option value={`/${area.slug}.html`}>{area.name}</option>
  ))}
  </select>
  <span class="chevron">⌄</span>
  </div>
  </div>
  <div class="area-link-groups">
  {serviceAreaGroups.map((group) => (
    <div class="area-link-group">
      <h3>{group.region}</h3>
      <ul>
      {group.areas.map((area) => (
        <li>
        <a href={`/${area.slug}.html`}>
          Damp &amp; timber reports in {area.name}
        </a>
        </li>
      ))}
      </ul>
    </div>
  ))}
  </div>
  <!-- 3. Footer note spans both columns -->
  <p class="note"><strong>Not on the list?</strong> Tell us where the property is and we’ll confirm availability.</p>
  </div>
  </div></section>
  <script is:inline>
    /** @param {HTMLSelectElement} select */
    function handleAreaSelect(select) {
      if (select.value) window.location.href = select.value;
    }
  </script>
  <!-- FINAL CTA -->
  <section class="home-get-started">
  <div class="box-container">
  <h2>Get a Quote or Ask a Question</h2>
  <p>We’re happy to help whether you’re ready to book or just comparing options.</p>
  <div class="center-cta">
  <a class="cta-button" href="/enquiry.html">Get My Quote</a>
  </div>
  </div>
  </section>
  <!-- STICKY CTA -->
  <div class="sticky-cta">
  <a class="cta-button" href="/enquiry.html">Get a Quote</a>
  </div>
  <!-- Footer -->


  </div></section>
</BaseLayout>
