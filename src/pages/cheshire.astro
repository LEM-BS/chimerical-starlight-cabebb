const faqs = {
  heading: 'Cheshire property FAQs',
  items: [
    {
      question: 'Do you cover all parts of Cheshire?',
      answer: 'Yes. We regularly inspect homes in Chester, Northwich, Nantwich, Knutsford, Wilmslow, Congleton and the surrounding villages.',
    },
