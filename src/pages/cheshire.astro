const hero = {
  eyebrow: `${townName} Surveyors`,
  heading: `Home and Building Surveys across ${townName}`,
  description:
    'Independent RICS surveyor supporting buyers and owners across Cheshire with clear home surveys, damp reports and renovation guidance for historic market towns, rural villages and modern developments.',
  cta: {
    label: 'Book a Cheshire survey',
    href: '/enquiry',
